<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.piotr.weatherforpoznan" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.WeatherApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Notice this tag which provides the database version -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Database.db" />
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.piotr.weatherforpoznan.DetailsActivity_" />

        <activity
            android:name=".DetailsActivity_"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a9c7e38bb2356fc4872464570cc2154518830002" />
    </application>

</manifest>
