<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.piotr.weatherforpoznan.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/sCityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_small"
            android:paddingBottom="@dimen/dimen_big">

            <TextView
                android:id="@+id/sCityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-light"
                android:padding="@dimen/dimen_medium"
                android:paddingLeft="@dimen/no_padding"
                android:paddingTop="@dimen/dimen_big"
                android:text="@string/location"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/sCityNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:hint="Test: put id or name of your city"
                android:padding="@dimen/dimen_medium"
                android:singleLine="true" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/sTimeFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_small"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/sTimeFormatTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-light"
                android:padding="@dimen/dimen_medium"
                android:paddingLeft="@dimen/no_padding"
                android:text="@string/time_format_title"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/sTimeFormatChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-light"
                android:padding="@dimen/dimen_medium"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/location"
                android:textAppearance="?android:attr/textAppearanceLarge">

                <RadioButton
                    android:id="@+id/sTimeFormat24H"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="sans-serif-light"
                    android:padding="@dimen/dimen_medium"
                    android:text="@string/time_format_24h" />

                <RadioButton
                    android:id="@+id/sTimeFormat12H"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:padding="@dimen/dimen_medium"
                    android:text="@string/time_format_12h" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sTemperatureFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_small">

            <TextView
                android:id="@+id/sTemperatureFormatTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-light"
                android:padding="@dimen/dimen_medium"
                android:paddingLeft="@dimen/no_padding"
                android:text="@string/temperature_units"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/sTemperatureFormatChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-light"
                android:padding="@dimen/dimen_medium"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/location"
                android:textAppearance="?android:attr/textAppearanceLarge">

                <RadioButton
                    android:id="@+id/sTemperatureFormatImperial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:padding="@dimen/dimen_medium"
                    android:text="@string/imperial" />

                <RadioButton
                    android:id="@+id/sTemperatureFormatMetric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="sans-serif-light"
                    android:padding="@dimen/dimen_medium"
                    android:text="@string/metric" />
            </RadioGroup>
        </LinearLayout>

        <CheckBox
            android:id="@+id/sEnableNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_small"
            android:checked="false"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/dimen_small"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="@string/weatherNotifications" />
    </LinearLayout>
</ScrollView>